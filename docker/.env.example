# ==============================================================================
# Skills API - Docker Environment Configuration
# ==============================================================================
# Copy this file to .env and fill in your values
# cp .env.example .env
# ==============================================================================

# ------------------------------------------------------------------------------
# API Keys
# ------------------------------------------------------------------------------
ANTHROPIC_API_KEY=
DEEPSEEK_API_KEY=
OPENROUTER_API_KEY=
MOONSHOT_API_KEY=
ZHIPU_API_KEY=
OPENAI_API_KEY=
TAVILY_API_KEY=
GEMINI_API_KEY=
UNSTRUCTURED_API_KEY=

# ------------------------------------------------------------------------------
# Database Configuration (PostgreSQL + pgvector)
# ------------------------------------------------------------------------------
DB_USER=skills
DB_PASSWORD=skills123
DB_NAME=skills_api
DB_PORT=62620

# ------------------------------------------------------------------------------
# Service Configuration
# ------------------------------------------------------------------------------

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=62610

# Web Server Configuration
WEB_PORT=62600

# Nginx Configuration (if using nginx profile)
NGINX_PORT=80
NGINX_SSL_PORT=443

# ------------------------------------------------------------------------------
# Model Configuration
# ------------------------------------------------------------------------------

# Default model provider (kimi, anthropic, openrouter, openai, google)
DEFAULT_MODEL_PROVIDER=kimi

# Default model name
# Kimi: kimi-k2.5
# Anthropic: claude-sonnet-4-5-20250929, claude-opus-4-6
DEFAULT_MODEL_NAME=kimi-k2.5

# Legacy: Claude model (for backward compatibility)
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# Maximum turns for Agent execution (default: 60)
AGENT_MAX_TURNS=60

# ------------------------------------------------------------------------------
# Advanced Configuration
# ------------------------------------------------------------------------------

# Enable debug mode (shows more logs)
DEBUG=false

# Timezone
TZ=UTC
