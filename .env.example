# ==============================================================================
# Skills API - Docker Environment Configuration
# ==============================================================================
# Copy this file to .env and fill in your values
# cp .env.example .env
# ==============================================================================

# ==============================================================================
# LLM Provider API Keys
# ==============================================================================

# ------------------------------------------------------------------------------
# Anthropic API Key (for Claude models)
# Get your key from: https://console.anthropic.com/
# Required if using Anthropic as the default provider
# ------------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# ------------------------------------------------------------------------------
# OpenRouter API Key (for access to multiple models via OpenRouter)
# Get your key from: https://openrouter.ai/
# Optional - enables GPT-4o, Claude, Gemini, Llama, DeepSeek via OpenRouter
# ------------------------------------------------------------------------------
OPENROUTER_API_KEY=

# ------------------------------------------------------------------------------
# OpenAI API Key (for direct OpenAI access)
# Get your key from: https://platform.openai.com/api-keys
# Optional - for GPT-4o, o1 models
# ------------------------------------------------------------------------------
OPENAI_API_KEY=

# ------------------------------------------------------------------------------
# Google API Key (for Gemini models)
# Get your key from: https://makersuite.google.com/app/apikey
# Optional - for Gemini 2.0 Flash, Gemini 1.5 Pro
# ------------------------------------------------------------------------------
GOOGLE_API_KEY=

# ------------------------------------------------------------------------------
# Optional: Tavily API Key (for AI-powered web search)
# Get your key from: https://tavily.com/ (1000 free searches/month)
# ------------------------------------------------------------------------------
TAVILY_API_KEY=

# ------------------------------------------------------------------------------
# Optional: Google Gemini API Key (for image analysis via MCP)
# Get your key from: https://makersuite.google.com/app/apikey
# Only needed if you want to use gemini_analyze_image tool
# ------------------------------------------------------------------------------
GEMINI_API_KEY=

# ------------------------------------------------------------------------------
# Optional: Unstructured API Key (for PDF extraction in some skills)
# Get your key from: https://unstructured.io/
# ------------------------------------------------------------------------------
UNSTRUCTURED_API_KEY=

# ------------------------------------------------------------------------------
# Database Configuration (PostgreSQL + pgvector)
# ------------------------------------------------------------------------------
DB_USER=skills
DB_PASSWORD=skills123
DB_NAME=skills_api
DB_PORT=5432

# ------------------------------------------------------------------------------
# Service Configuration
# ------------------------------------------------------------------------------

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=62610

# Web Server Configuration
WEB_PORT=3000

# Nginx Configuration (if using nginx profile)
NGINX_PORT=80
NGINX_SSL_PORT=443

# ------------------------------------------------------------------------------
# Default Model Configuration
# ------------------------------------------------------------------------------

# Default model provider (kimi, anthropic, openrouter, openai, google)
DEFAULT_MODEL_PROVIDER=kimi

# Default model name
# Kimi: kimi-k2.5
# Anthropic: claude-sonnet-4-5-20250929, claude-opus-4-6
# OpenRouter: anthropic/claude-3.5-sonnet, openai/gpt-4o, google/gemini-2.0-flash-exp:free
# OpenAI: gpt-4o, gpt-4o-mini, o1-preview
# Google: gemini-2.0-flash, gemini-1.5-pro
DEFAULT_MODEL_NAME=kimi-k2.5

# Legacy: Claude model (for backward compatibility)
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# Maximum turns for Agent execution (default: 60)
AGENT_MAX_TURNS=60

# ------------------------------------------------------------------------------
# Advanced Configuration
# ------------------------------------------------------------------------------

# Enable debug mode (shows more logs)
DEBUG=false

# Timezone
TZ=UTC
